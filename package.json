{
  "name": "monorepo-starter",
  "private": true,
  "version": "0.0.1",
  "description": "A monorepo starter",
  "repository": "suhaotian/xior",
  "bugs": "https://github.com/suhaotian/xior/issues",
  "homepage": "https://github.com/suhaotian/xior",
  "scripts": {
    "build:lib": "rm -rf lib && tsc --project tsconfig.json",
    "test": "pnpm -r test",
    "checktype": "pnpm -r checktype",
    "start-publish": "pnpm build && pnpm test && npm publish --registry=https://registry.npmjs.org",
    "push": "git push && git lfs push --all origin",
    "prepare": "is-ci ||  husky"
  },
  "devDependencies": {
    "husky": "^9.0.7",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.4",
    "is-ci": "^3.0.1",
    "typescript": "^5.3.3",
    "@types/node": "^20.11.13",
    "eslint-config-universe": "^12.0.0",
    "@tsconfig/recommended": "^1.0.3",
    "lfs-auto-track": "^1.1.0",
    "@babel/preset-typescript": "^7.23.3",
    "@jest/globals": "^29.7.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "babel-jest": "^29.7.0"
  },
  "pnpm": {
    "overrides": {
      "esbuild": "0.20.2"
    }
  },
  "prettier": {
    "printWidth": 100,
    "tabWidth": 2,
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSameLine": true
  },
  "eslintConfig": {
    "extends": "eslint-config-universe",
    "ignorePatterns": [
      "node_modules"
    ]
  },
  "lint-staged": {
    "*": [
      "lfs-auto-track 'image,video,audio:100kb;*:1024kb'"
    ],
    "*.{ts,tsx,mts}": [
      "prettier --write"
    ],
    "*.{md,css,js,mjs}": [
      "prettier --write"
    ]
  },
  "files": [
    "dist",
    "plugins"
  ],
  "keywords": [
    "fetch",
    "axios",
    "axios fetch",
    "axios alternatives",
    "adapter",
    "plugins",
    "http",
    "edge runtime",
    "https",
    "network",
    "url",
    "uri",
    "promise",
    "request",
    "error retry",
    "request cache",
    "request throttle"
  ],
  "author": "suhaotian",
  "license": "MIT"
}
